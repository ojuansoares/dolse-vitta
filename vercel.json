{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/auth/(.*)", "dest": "/api/auth.py" },
    { "src": "/api/users/(.*)", "dest": "/api/users.py" },
    { "src": "/api/checkout", "dest": "/api/checkout.py" },
    { "src": "/api/about", "dest": "/api/about.py" },
    { "src": "/api/reorder/(.*)", "dest": "/api/reorder.py" },
    { "src": "/api/categories/([^/]+)", "dest": "/api/categories/[id].py?category_id=$1" },
    { "src": "/api/categories", "dest": "/api/categories/index.py" },
    { "src": "/api/products/([^/]+)", "dest": "/api/products/[id].py?product_id=$1" },
    { "src": "/api/products", "dest": "/api/products/index.py" },
    { "src": "/api/orders", "dest": "/api/orders/index.py" },
    { "src": "/api/?", "dest": "/api/index.py" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|woff|woff2))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
